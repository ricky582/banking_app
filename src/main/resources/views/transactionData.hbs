<!DOCTYPE html>
<head>
   <meta charset="utf-8">
   <title></title>
   <meta name="description" content="">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <title>Transaction Data</title>
   <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
   <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
   <link rel="stylesheet" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css">
   <script>
        $(document).ready(function() {
            $('#example').DataTable();
        } );
   </script>

    <script type = "text/javascript">
        function redirect(){
        var windowsObjectReference = null;
        var thisWindow = "http://localhost:8080/transactionData"
        if(windowsObjectReference == null || windowsObjectReference.closed) {
            var Val = document.getElementById("inputBox").value;
            windowsObjectReference = window.open("http://localhost:8080/transactionData/?id=" + Val);
        } else {
            windowsObjectReference.focus();
        };
    }
    </script>
</head>
<body>
   <table id="example" class="display" style="width:100%">
           <thead>
               <tr>
                   <th>Withdraw Account</th>
                   <th>Deposit Account</th>
                   <th>Timestamp</th>
                   <th>ID</th>
                   <th>Amount</th>
                   <th>Currency</th>
                   <th>Status</th>
               </tr>
           </thead>
           <tbody>
           {{#transac}}
               <tr>
                    <td>{{widAcc.iD}}</td>
                    <td>{{depAcc.iD}}</td>
                    <td>{{timestamp}}</td>
                    <td>{{id}}</td>
                    <td>{{amount}}</td>
                    <td>{{currency}}</td>
                    <td>{{done}}</td>
               </tr>
           {{/transac}}
           </tbody>
           <tfoot>
               <tr>
                   <th>Withdraw Account</th>
                   <th>Deposit Account</th>
                   <th>Timestamp</th>
                   <th>ID</th>
                   <th>Amount</th>
                   <th>Currency</th>
                   <th>Status</th>
               </tr>
           </tfoot>
       </table>
<form name = "Repeat">
    <input type = "text" name = "id" id="inputBox" placeholder = "transaction id" value = "" >
    <input type = "submit" value = "RepeatTransaction" onclick="redirect()" >
</form>
</body>
</html>